             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="XamarinFormsApp.MainPage"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <StackLayout>
        <!-- Place new controls here -->
        <Label FontSize= "35" TextColor="Black" Text="Velkommen!" Margin="0,40"
           FontAttributes="Bold"
           HorizontalOptions="Center"
           VerticalOptions="Start" />
        <Label Text="Opret en ny profil:" FontSize="20" TextColor="Gray" Margin="15" HorizontalOptions="Center"/>
        <Button Text="Registrer" FontSize="18" TextColor="Black" Clicked="ProfileButton_Clicked"/>
        <Label Text="Har du allerede en profil:" FontSize="20" TextColor="Gray" Margin="15" HorizontalOptions="Center"/>
        <Button Text="Log Ind" FontSize="18" TextColor="Black"           />
    </StackLayout>

</ContentPage>
